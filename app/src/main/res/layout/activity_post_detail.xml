<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Heading -->
    <TextView
        android:id="@+id/tvPostDetailHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complaint"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#222222"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"/>

    <!-- User Info -->
    <View
        android:id="@+id/ivUserAvatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_rounded_green"
        app:layout_constraintTop_toBottomOf="@id/tvPostDetailHeading"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"/>

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aneesh"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#222222"
        app:layout_constraintTop_toTopOf="@id/ivUserAvatar"
        app:layout_constraintStart_toEndOf="@id/ivUserAvatar"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/tvUserLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dibdih"
        android:textSize="14sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@id/tvUserName"
        app:layout_constraintStart_toStartOf="@id/tvUserName"/>

    <!-- Title -->
    <TextView
        android:id="@+id/tvPostTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Full Title Here"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/ivUserAvatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/tvPostDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Full description goes here..."
        android:textSize="15sp"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/tvPostTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"/>

    <!-- Photo Gallery -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPostPhotos"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/tvPostDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:clipToPadding="false"
        android:overScrollMode="never"/>

    <!-- Upvote/Downvote -->
    <LinearLayout
        android:id="@+id/llVote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/rvPostPhotos"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp">

        <ImageView
            android:id="@+id/ivUpvote"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_thumb_up"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/tvUpvoteCount"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="0"
            android:textSize="16sp"
            android:textColor="#4CAF50"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"/>
        <ImageView
            android:id="@+id/ivDownvote"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_thumb_down"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/tvDownvoteCount"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="0"
            android:textSize="16sp"
            android:textColor="#F44336"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <!-- Comments Section -->
    <TextView
        android:id="@+id/tvCommentsHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#222222"
        app:layout_constraintTop_toBottomOf="@id/llVote"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvComments"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvCommentsHeading"
        app:layout_constraintBottom_toTopOf="@id/llAddComment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:clipToPadding="false"
        android:overScrollMode="never"/>

    <!-- Add Comment -->
    <LinearLayout
        android:id="@+id/llAddComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="24dp">

        <EditText
            android:id="@+id/etAddComment"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Add a comment..."
            android:textSize="15sp"
            android:background="@drawable/bg_rounded_grey_placeholder"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#222222"
            android:textColorHint="#888888"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPostComment"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Post"
            android:background="@drawable/bg_rounded_green"
            android:backgroundTint="@null"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:elevation="4dp"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 